<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#000">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="15dp"
            android:id="@+id/name_text">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:layout_weight="0.6"
                android:layout_marginLeft="20dp"
                android:text="Name:"
                android:gravity="center"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/addborder"
                android:layout_marginRight="10dp"
                android:text="   Paul"
                android:textColor="#FFF"
                android:layout_weight="0.4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="15dp"
            android:id="@+id/name_phone">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:layout_weight="0.6"
                android:layout_marginLeft="20dp"
                android:text="Phone:"
                android:gravity="center"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/addborder"
                android:layout_marginRight="10dp"
                android:text="   555-555-555"
                android:textColor="#FFF"
                android:layout_weight="0.4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="15dp"
            android:id="@+id/name_email">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:layout_weight="0.6"
                android:layout_marginLeft="20dp"
                android:text="E-Mail:"
                android:gravity="center"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/addborder"
                android:layout_marginRight="10dp"
                android:text="   paul@fakeemail.com"
                android:textColor="#FFF"
                android:layout_weight="0.4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="15dp"
            android:id="@+id/name_street">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:layout_weight="0.6"
                android:layout_marginLeft="20dp"
                android:text="Street:"
                android:gravity="center"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/addborder"
                android:layout_marginRight="10dp"
                android:text="   1 Main St."
                android:textColor="#FFF"
                android:layout_weight="0.4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="15dp"
            android:id="@+id/CityInfo">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:layout_weight="0.6"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:text="City/State/Zip:" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/addborder"
                android:layout_marginRight="10dp"
                android:text="   Some Town, MA 02215"
                android:textColor="#FFF"
                android:layout_weight="0.4"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>


